<ToDoListItem>
    orientation: "horizontal"
    canvas:
        Color:
            rgb: [0, 0, 1]
        Rectangle:
            pos: self.pos
            size: self.size
    item_text: ''
    timer_text: ''
    btn_text: 'Start'
    Label:
        text: root.item_text
    Label:
        text: root.timer_text

    Button:
        text: root.btn_text
        background_color: [0, 1, 0, 1]
        #size_hint_x:
        on_press: root.onClick()
