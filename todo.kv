<ToDoLayout>:

   # canvas:
   #     Color:
   #         rgb: [1, 1, 1]
   #     Rectangle:
   #         pos: self.pos
   #         size: self.size
    orientation: "vertical"
    padding: 10
    spacing: 10
    rv: rv

    RecycleView:
        id: rv
        scroll_type: ['bars', 'content']
        scroll_wheel_distance: dp(114)
        bar_width: dp(10)
        viewclass: 'ToDoListItem'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)

    BoxLayout:
        size_hint_y: .2
        TextInput:
            id: todo_item_input
            hint_text: "Insert item here..."
        Button:
            text: "Add Items"
            on_press: root.insert(todo_item_input.text)
